<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root prefHeight="380.0" prefWidth="300.0" type="VBox" xmlns="http://javafx.com/javafx/21"
         xmlns:fx="http://javafx.com/fxml/1">
   <ListView fx:id="listView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS"/>
   <HBox alignment="CENTER" spacing="4.0">
      <padding>
         <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
      </padding>
      <CheckBox fx:id="ckbSelectAll" mnemonicParsing="false" HBox.hgrow="ALWAYS"/>
      <HBox fx:id="hbEditBar" alignment="CENTER_RIGHT" spacing="4.0" HBox.hgrow="ALWAYS">
         <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#onBtnAdd" text="+"/>
         <Button fx:id="btnRemove" mnemonicParsing="false" onAction="#onBtnRemove" text="-"/>
      </HBox>
   </HBox>
</fx:root>
